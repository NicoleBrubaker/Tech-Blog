
<div class="py-12">
  <div class="mx-auto max-w-5xl px-6 lg:px-8">
    <div class="mt-2 space-y-16 border-t border-gray-200 pt-16">
        <article class="flex flex-col items-start justify-between">
          <div class="group relative">
            <h3
              class="mt-3 text-lg font-semibold leading-6 text-blue-800 group-hover:text-gray-600"
            >
              <a href="#">
                <span class="absolute inset-0 text-4xl font-bold text-blue-700 mt-14"></span>
                {{post.title}}
              </a>
            </h3>
            <p class="mt-5 text-sm leading-6 text-gray-600">{{post.body}}</p>
          </div>
          <div class="relative mt-8 flex items-center gap-x-4">
            <div class="text-sm leading-6">
              <p class="font-semibold text-gray-800">
                Written by:
                <a href="#">
                  <span class="absolute inset-0"></span>
                  {{post.author}}
                </a>
              </p>
              <div class="flex items-center gap-x-4 text-xs">
                <time
                  datetime="{{post.created_at}}"
                  class="text-gray-500"
                >{{post.created_at}}</time>
              </div>
            </div>
          </div>
        </article>
    </div>
  </div>
</div>