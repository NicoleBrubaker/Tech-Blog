{{!-- page to add a new post with form --}}

<form
  action="/api/blog"
  method="POST"
  class="flex flex-col space-y-4 items-center mx-auto"
>
  <input type="hidden" name="user_id" value="{{user_id}}" />
  <label for="author">Author</label>
  <input
    type="text"
    id="author"
    name="author"
    class="w-96 border border-2 rounded-md"
    required
  />

  <label for="title">Title</label>
  <input
    type="text"
    id="title"
    name="title"
    class="w-96 border border-2 rounded-md"
    required
  />

  <label for="body">Body</label>
  <textarea
    id="body"
    name="body"
    rows="4"
    class="w-96 border border-2 rounded-md"
    required
  ></textarea>

  <button
    type="submit"
    class="w-96 bg-blue-700 text-white p-2 rounded-md"
  >Submit Post</button>
</form>